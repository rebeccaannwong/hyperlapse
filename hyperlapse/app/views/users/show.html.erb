<h1>NEW USER</h1>

<% @user.errors.full_messages.each do |msg| %>
<%= msg %><br/>
<% end %>

<hr>

<%= form_for @user do |f| %>

<div class='field'>

  <%= f.text_field :firstname, placeholder: "First Name", style:"width:200px;" %><br>

  <%= f.text_field :lastname, placeholder: "Last Name", style:"width:200px;" %><br>

  <%= f.text_field :username, placeholder: "Username", style:"width:200px;" %><br>

  <%= f.password_field :password, placeholder: "Password", style:"width:200px;" %><br>

  <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", style:"width:200px;" %><br>

  <br><%= f.submit "SIGN UP"%>
</div>
<% end %>
